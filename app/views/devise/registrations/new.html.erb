<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xs-offset-3 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
      <div class="box-blue-round">
        <h1 class="centra">New user</h1>
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :nombre, :class => "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :nombre, :class => "form-control", :autofocus => true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :ap1, :class => "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :ap1, :class => "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :ap2, :class => "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :ap2, :class => "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :fechaNac, :class => "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%#= f.date_select :fechaNac, {:class => "select birthday"}    %>
                <%= f.date_select(:fechaNac, { start_year: (Time.now - 100.year).year, end_year: Time.now.year}, {:class => "form-control select-date"}) %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, :class => "col-sm-2 control-label" %><br />
            <div class="col-sm-10">
              <%= f.email_field :email, :class => "form-control" %> 
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, :class => "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <% if @validatable %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, :class => "col-sm-2 control-label" %><br />
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.hidden_field :padre_id %>        
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
               <%= f.submit :class => "btn btn-default" %>
            </div>
          </div>

          <!--<div class="actions">
            <%#= f.submit "Sign up" %> boton antiguo de devise
          </div>-->
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
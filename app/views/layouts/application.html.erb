<!DOCTYPE html>
<html>
<head>
  <title>ListinRoR</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  																		<!-- header -->
	<nav class="navbar navbar-inverse navbar-fixed-top opacidad myHeader" role="navigation">
	  <div class="container">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">      
	      <a href="/">
	        <!-- <img src="/assets/phoneverde.png" alt="HTML tutorial" style="width:42px;height:42px;padding-top:2px"> -->
	        <i class="logo-top fa fa-phone fa-3x"></i>
	      </a>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li><%= link_to "All Contacts", admin_contacts_path %> <!-- para ir a todos los contacts -->
			<!--<a href="#">All Contacts</a>--></li>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
	        <li><a href="http://www.paginasamarillas.es/"><i class="fa fa-phone blue fa-spin"></i> Paginas Amarillas</a></li>
	      </ul>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container -->
	</nav><br><br>
																		<!-- fin header -->

	<% if notice %> <!-- notificaciones -->
		<div class="notification-box col-xs-3 col-sm-3 col-md-3 col-lg-3 box-blue-round" id="notification_box">
			<p class="fa fa-info-circle" id="notice"><%= notice %></p>
		</div>

			<!-- con jQuery hago un setTimeout q es q en 2000 ms haga lo de las llaves (un fadeOut de 2000 ms, esto es desvanecerse en 2sg) 
		<script type="text/javascript">
			setTimeout(function(){ $("#notification_box").fadeOut(2000);}, 2000); 
		</script>-->
	<% end %>

	<% if alert %> <!-- alertas -->
		<div class="notification-box col-xs-3 col-sm-3 col-md-3 col-lg-3 box-red-round" id="notification_box">
			<p class="fa fa-info-circle" id="alert"><%= alert %></p>
		</div>
	<% end %>

	<!-- si hay current_user muestro su email, y si no lo hay muestro botone log-in y log-up -->
	<div class="margin-to-top">
		<% if current_user %>
	      <%= link_to "#{current_user.email}", user_contacts_path(current_user) %><br>
	      <%= link_to "Exit", destroy_user_session_path, method: :delete %>
	  	<% else %>
		  <%= link_to "SingIn", new_user_session_path %>
	      <%= link_to "SingUp", new_user_registration_path %>
	  	<% end %>
  	</div>
<%= yield %>
<br><br><br>

																		<!-- footer -->
<nav class="navbar navbar-inverse navbar-fixed-bottom myFooter opacidad" role="navigation">
  <div class="container">
  	<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "Home", root_path %></li>
        <li><%= link_to "All Contacts", admin_contacts_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="https://twitter.com/jamarinhidalgo"><i class="fa fa-twitter-square blue  logo-bottom"></i> @jamarinhidalgo</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div>
</nav>
													   				<!-- fin footer -->

</body>
</html>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :ap1 %><br />
    <%= f.text_field :ap1 %>
  </div>
  <div class="field">
    <%= f.label :ap2 %><br />
    <%= f.text_field :ap2 %>
  </div>
  <div class="field">
    <%= f.label :fechaNac %><br />
    <%= f.date_select :fechaNac %>
  </div>

  <% if @padre == nil %>
    <div class="field"> <!-- este campo oculto, "@padre.id" es el id del user xq no viene padre-->
      <%= f.hidden_field :padre_id, :value => @user.id %><br />
    </div>
  <% else %>
    <div class="field"> <!-- este campo oculto, "@padre.id" es el id del padre xq SI q tiene padre-->
      <%= f.hidden_field :padre_id, :value => @padre.id %><br />
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

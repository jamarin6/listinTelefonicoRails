          <%= f.label :ap1 %><br />
          <%= f.text_field :ap1 %>
        </div>
        <div class="field">
          <%= f.label :ap2 %><br />
          <%= f.text_field :ap2 %>
        </div>
        <div class="field">
          <%= f.label :fechaNac %><br />
          <%= f.date_select :fechaNac %>
        </div>

        <%= f.hidden_field :padre_id %>
        <br>

        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
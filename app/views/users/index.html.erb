<div class="container">
  <div class="row line"><br>

    <br>
   
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xs-offset-3 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
    
        <h1 class="centra">Listing users</h1><br>
        <table class="table table-striped table-hover col-centered" id="tabla">
        <tbody>
          <tr>
            <th>Nombre</th>
            <th>NavegaciÃ³n</th>
          </tr>


            <% @users.each do |user| %>
              <tr>       <!--################### Navegacion con link_to ##########################-->
                <td><%= user.nombre + " " + user.ap1 + " " + user.ap2%></td>
                <td><%= link_to ' Info', user_path(user.id), method: :get, :class => 'btn btn-primary btn-xs fa fa-info-circle' %>   
                    <%= link_to ' Edit', edit_user_path(user), method: :get, :class => 'btn btn-warning btn-xs fa fa-cogs' %>
                    <%= link_to ' Listing', user_contacts_path(:user_id => user.id), method: :get, :class => 'btn btn-info btn-xs fa fa-phone-square' %>
                    <%= link_to ' New', new_user_path(:padre_id => user.id), method: :get, :class => 'btn btn-success btn-xs fa fa-plus fa fa-male' %>
                    <%= link_to '', user, :class => 'btn btn-danger btn-xs fa fa-trash', method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>                             
           
            <% end %>


          </tbody>
        </table>
        <div class="centra">
          <%= paginate @users %>
        </div>
        <br />

        <% if @users_empty %>
          <h3 class="centra"><%= link_to 'New SuperUser', new_user_path %></h3>
        <% end %>
      </div>
  </div>
</div>
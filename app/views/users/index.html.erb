<div class="container">
  <h1 class="centra">Listing users</h1>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <table class="table table-striped table-hover col-centered">
      <tbody>
        <tr>
          <th>Nombre</th>
          <th>NavegaciÃ³n</th>
        </tr>

        <% @users.each do |user| %>
          <tr>       <!--################### Navegacion con link_to ##########################-->
            <td><%= user.nombre + " " + user.ap1 + " " + user.ap2%></td>
            <td><%= link_to 'Show', user_path(user.id), method: :get, :class => 'btn btn-primary btn-xs' %>   
                <%= link_to 'Edit', edit_user_path(user), method: :get, :class => 'btn btn-warning btn-xs' %>
                <%= link_to 'Delete', user, method: :get, :class => 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %>
                <%= link_to 'PhoneBook', user_contacts_path(:user_id => user.id), method: :get, :class => 'btn btn-info btn-xs' %>
                <%= link_to 'AddUser', new_user_path(:padre_id => user.id), method: :get, :class => 'btn btn-success btn-xs' %>
            </td>
          </tr>
       
        <% end %>
        </tbody>
      </table>

      <br />

      <% if @users_empty %>
        <%= link_to 'New SuperUser', new_user_path %>
      <% end %>
    </div>
    <div class="col-lg-3">
      <br>
      <br>
      <br>
      <br>
    </div>
  </div>
</div>
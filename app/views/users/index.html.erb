<div class="container">
  <% if notice.nil? %>
    
  <% else %>
    <div class="row"><br>
      <div class="col-lg-3 border-green">
        <p id="notice"><%= notice %></p>
      </div>
    </div>
  <% end %>

  <h1 class="centra">Listing users</h1><br>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <table class="table table-striped table-hover col-centered">
      <tbody>
        <tr>
          <th>Nombre</th>
          <th>NavegaciÃ³n</th>
        </tr>


        <% @users.each do |user| %>
          <tr>       <!--################### Navegacion con link_to ##########################-->
            <td><%= user.nombre + " " + user.ap1 + " " + user.ap2%></td>
            <td><%= link_to '', user_path(user.id), method: :get, :class => 'btn btn-primary btn-xs fa fa-info-circle' %>   
                <%= link_to '', edit_user_path(user), method: :get, :class => 'btn btn-warning btn-xs fa fa-cogs' %>
                <%= link_to '', user, method: :get, :class => 'btn btn-danger btn-xs fa fa-trash', method: :delete, data: { confirm: 'Are you sure?' } %>
                <%= link_to '', user_contacts_path(:user_id => user.id), method: :get, :class => 'btn btn-info btn-xs fa fa-phone-square' %>
                <%= link_to 'New', new_user_path(:padre_id => user.id), method: :get, :class => 'btn btn-success btn-xs fa fa-plus fa fa-male' %>
            </td>
          </tr>                             
       
        <% end %>
        </tbody>
      </table>

      <br />

      <% if @users_empty %>
        <%= link_to 'New SuperUser', new_user_path %>
      <% end %>
    </div>
    <div class="col-lg-3">
      <br>
      <br>
      <br>
      <br>
    </div>
  </div>
</div>
<p id="notice"><%= notice %></p>

<p>
  <b>Nombre:</b>
  <%= @user.nombre %>
</p>

<p>
  <b>Ap1:</b>
  <%= @user.ap1 %>
</p>

<p>
  <b>Ap2:</b>
  <%= @user.ap2 %>
</p>

<p>
  <b>Date of birth:</b>
  <%= @user.fechaNac %>
</p>

<p>
  <b>ID:</b>
  <%= @user.id %>
</p>

<p>
  <b>Father:</b>
  <% if (@user.id == @user.padre_id) %>
    SuperUser (no father)
  <% else %>
    <%= @padre.nombre %>
  <% end %>
</p>

<!--<p>
  <b>user.padre_ID:</b>
  <%= @user.padre_id %>
</p>-->


<p>
  <b>Contacts:</b>
  <%= link_to "#{@user.contacts.count} numbers", user_contacts_path(@user) %><%= " " %>
</p>

<p>

  <b>Hijos:</b>

    <% if @userSons.count == 0 %>
      <h3>----- No tiene hijos -----</h3>

    <% else %>
      <% @userSons.each do |son| %>
        <ul>
          <% if !(son.id == @user.id) %><!-- para q no muestre el superUser a el mismo como hijo (xq su id es = al padre_id) -->
            <li><%= link_to son.nombre, user_path(:id => son.id, :padre_id => son.padre_id) %></li>
          <% end %>
        </ul>
      <% end %>
    <% end %>

</p>

